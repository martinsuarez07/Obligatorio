<h1 class="text-center mb-5 text-dark">Login</h1>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger text-center" role="alert">
        @ViewBag.ErrorMessage
    </div>
}

<div class="d-flex justify-content-center align-items-center full-height">
    <div class="login-container col-md-6 col-lg-4">
        <form method="post" class="login-form">
            <div class="form-group mb-3">
                <input type="email" name="correo" placeholder="Correo electrónico" class="form-control form-control-teal"  />
            </div>
            <div class="form-group mb-3">
                <input type="password" name="password" placeholder="Contraseña" class="form-control form-control-teal"  />
            </div>
            <button type="submit" class="btn btn-submit">Ingresar</button>
        </form>
    </div>
</div>

<!-- Estilos (sin cambios) -->
<style>
    /* ... tus estilos originales ... */
</style>


<!-- Estilos para cambiar el color del borde a verde agua y agregar fondo -->
<style>
    /* Aseguramos que el fondo cubra toda la pantalla */
    body, html {
        height: 100%;
        margin: 0;
    }

    /* Fondo para la página, se nota más */
    .full-height {
        background: linear-gradient(to bottom, #ffc107, #ffc107); /* Gradiente suave de verde agua */
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    /* Fondo y estilo del formulario */
    .login-container {
        background-color: #ffffff; /* Fondo blanco para el formulario */
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1); /* Sombra suave */
    }

    /* Estilo de los campos de entrada */
    .form-control-teal {
        border: 2px solid #ffc107; /* Verde agua para el borde */
        padding: 10px;
    }

        .form-control-teal:focus {
            border-color: #ffc107; /* Un verde agua más fuerte al enfocar */
            box-shadow: 0 0 5px rgba(77, 184, 184, 0.5); /* Resplandor suave */
        }

    /* Botón de ingreso estilizado */
    .btn-submit {
        background-color: #ffc107; /* Verde agua */
        border: none;
        color: white;
        font-size: 18px;
        padding: 12px;
        width: 100%;
        border-radius: 5px;
        transition: all 0.3s ease-in-out;
    }

        .btn-submit:hover {
            background-color: #ffc107; /* Cambio a un verde agua más suave al pasar el ratón */
            transform: translateY(-2px); /* Efecto de desplazamiento al hacer hover */
        }

        .btn-submit:active {
            background-color: #ffc107;
            transform: translateY(0); /* Vuelve al lugar después de hacer clic */
        }

    /* Añadir un margen y centrado al formulario */
    .login-container {
        width: 100%;
        max-width: 400px; /* Máximo ancho del formulario */
        margin-top: 0;
        padding-top: 20px;
        padding-bottom: 20px;
    }

    /* Para centrar el formulario vertical y horizontalmente */
    .login-form {
        display: flex;
        flex-direction: column;
    }
</style>
