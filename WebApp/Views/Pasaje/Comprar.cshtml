@using Dominio;
@model Dominio.Vuelo

<h2>Comprar Pasaje</h2>

<p><strong>Vuelo:</strong> @Model.NumeroVuelo</p>
<p>
    <strong>Días disponibles:</strong>
    @foreach (var dia in ViewBag.Frecuencias as List<DayOfWeek>)
    {
        <span>@dia.ToString() </span>
    }
</p>

<form asp-action="ConfirmarCompra" method="post">
    <input type="hidden" name="numeroVuelo" value="@Model.NumeroVuelo" />

    <label for="fecha">Fecha:</label>
    <input type="date" name="fecha" required />

    <label for="tipoEquipaje">Equipaje:</label>
    <select name="tipoEquipaje">
        <option value="cabina">Cabina</option>
        <option value="bodega">Bodega</option>
    </select>

    <button type="submit">Comprar</button>
</form>

<p style="color:@ViewBag.ColorMensaje;">@ViewBag.Mensaje</p>