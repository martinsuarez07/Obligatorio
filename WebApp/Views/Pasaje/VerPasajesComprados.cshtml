
@{
    ViewBag.Title = "Pasajes Comprados";
    var pasajes = ViewBag.Pasajes as List<Dominio.Pasaje>;
}

<h2>Pasajes Comprados</h2>

@if (pasajes != null && pasajes.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Vuelo</th>
                <th>Fecha</th>
                <th>Tipo Equipaje</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in pasajes)
            {
                <tr>
                    <td>@p.Vuelo.NumeroVuelo</td>
                    <td>@p.Fecha.ToShortDateString()</td>
                    <td>@p.TipoEquipaje</td>
                    <td>@p.Precio.ToString("F2")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay pasajes comprados.</p>
}